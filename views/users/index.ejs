<%layout('layouts/boilerplate')%>
<div class="container justify-content-center .align-items-center">
  <% for( user of users){ %>
  <div class="card mb-3" style="max-width: 540px">
    <div class="row no-gutters">
      <div class="col-md-4">
        <% userImage = user.image ? user.image.url :
        "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSBfueERPxaGtZ7iIZtbbt7Tdajf2_TZyDVfA&usqp=CAU"
        %>
        <img src="<%= userImage %>" class="card-img" alt="..." />
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%= user.username %></h5>
          <p class="card-text"><%= user.email %></p>
          <a href="/users/<%=user._id%>" class="btn btn-success float-end m-3"
            >View Profile</a
          >
          <p>the url is /users/<%=user._id%></p>
        </div>
      </div>
    </div>
  </div>
  <% } %>
</div>
